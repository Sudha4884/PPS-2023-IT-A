#include<stdio.h>  
int main()    
{    
int n,remainder,reversed=0,original;    
printf("enter the number=");    
scanf("%d",&n);    
original=n;    
while(n>0)    
{    
remainder=n%10;    
reversed=(reversed*10)+remainder;    
n=n/10;    
}    
if(original==reversed)    
printf("The given number is a palindrome");    
else    
printf("The given number is not a palindrome");   
return 0;  
}   
