#include <stdio.h>
void main()
{
    // finding tha maximum value 
    int a,b,c;
printf("\n Enter three elements");
scanf("%d%d%d",&a,&b,&c);
if ( a>b && a>c)
printf("\n a is maximum value: %d",a);
else if (b>a && b>c)
printf("\n b is maximum value : %d",b);
else
printf("\n c is maximum   :%d",c );

// finding the minimum value
if ( a<b && a<c)
printf("\n a is minimum  value: %d",a);
else if (b<a && b<c)
printf("\n b is minimum  value : %d",b);
else
printf("\n c is minimum :%d",c );
}
output:
 
 enter the three elements
 a is maximum value: 32767 
 c is minium value : 0
