#include <stdio.h>

int main() {
    int n,r,t,rev=0;
    printf("\n enter a number: ");
    scanf("%d",&n);
    t=n;
    printf("\n given number = %d",n);
    while(n>0)
        { 
          r=n%10;
          rev=rev*10+r;
          n=n/10;
        }
   printf("\n rev value =%d",rev);
     if(t==rev)
     {
         printf("\n %d is palindrome",t);
     }
     else
     {
         printf("\n%d is not palindrome",t);
     }
}
