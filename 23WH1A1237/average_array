#include<stdio.h>

int main()
{
    int arr[100], n, i, sum = 0,average;
    printf("Enter array size");
    scanf("%d",&n);
    
    printf("Enter elements of the array\n");
    for(i = 0; i < n; i++)
          scanf("%d",&arr[i]);
          
    for(i = 0; i < n; i++)
          sum = sum + arr[i]; 
          average = sum/2;
    
    printf("average of the given elements in array = %d\n",average);
    
    return 0;
}

